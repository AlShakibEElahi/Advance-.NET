
@{
    ViewBag.Title = "ProductCategory";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2>ProductCategory</h2>
<table class="table table-bordered">
    <tr>
        <th>Category Name</th>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    @foreach (var item in ViewBag.Category)
    {
        <tr>
            <td>@item.CName</td>
            @for(int i = 0; i < ViewBag.Category.Products.Length; i++)
                {
                ///! to many association
                } 
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
        </tr>
    }

</table>

